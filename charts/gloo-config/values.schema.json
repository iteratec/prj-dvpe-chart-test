{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "apigw": {
      "type": "array",
      "items": {
        "svc": {
          "type": "string"
        },
        "type": "object",
        "properties": {
          "internet": {
            "type": "boolean"
          },
          "useMTLS": {
            "type": "boolean"
          },
          "rootPrefix": {
            "type": "boolean"
          },
          "swaggerPrefix": {
            "type": "boolean"
          },
          "cors": {
            "type": "object",
            "properties": {
              "allowCredentials": {
                "type": "boolean"
              },
              "allowMethods": {
                "type": "array",
                "items": {
                    "type": "string"
                }
              },
              "allowedHeaders": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "allowedOrigins": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "allowOriginRegex": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "exposeHeaders": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "maxAge": {
                "type": "string"
              }  
            }
          },
          "headerManipulation": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "header": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "strongAuthLevel": {
            "type": "integer"
          },          
          "routes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "prefix": {
                  "$ref": "#/definitions/sanePrefix"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "ui", "ui-with-strongauth", "backend", "backend-with-strongauth", "m2m", "m2m-with-token"
                  ]
                },
                "clientId": {
                  "$ref": "#/definitions/saneClientID"
                },
                "callbackPath": {
                  "$ref": "#/definitions/sanePrefix"
                },
                "clientSecret": {
                  "type": "string"
                },
                "redirectUrl": {
                  "type": "string"
                },
                "headerExtension": {
                  "type": "boolean"
                },
                "allowedClientIds": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "httpsRedirect": {
                  "type": "boolean"
                },
                "sessionCacheName": {
                  "type": "string",
                  "enum":[
                    "auth0-session", "wadtfy-prod", "wadtfy-int", "wadtfy-test"
                  ]
                },
                "upstream": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "namespace": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name"
                  ]
                },
                "authPluginMode": {
                  "type": "string",
                  "enum": [
                    "VerifyAccessToken", "GatherCredentials"
                  ]
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": { "type": { "const": "ui" } },
                    "required": ["type"]
                  },
                  "then": {
                    "required": ["clientId", "clientSecret"]
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "ui-with-strongauth" } },
                    "required": ["type"]
                  },
                  "then": {
                    "required": ["clientId", "clientSecret"]
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "m2m" } },
                    "required": ["type"]
                  },
                  "then": {
                    "required": ["allowedClientIds"]
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "m2m-with-token" } },
                    "required": ["type"]
                  },
                  "then": {
                    "required": ["clientId", "clientSecret"]
                  }
                }
              ],
              "required": [
                "prefix"
              ]
            },
            "uniqueItems": true
          }
        },
        "required": [
          "svc"
        ]
      }
    }
  },
  "required": [
    "apigw"
  ],
  "definitions": {
    "sanePrefix": { "type": "string", "pattern": "^[/][A-z]?" },
    "saneClientID": { "type": "string", "pattern": "[-a-z0-9]+"}
  }
}
