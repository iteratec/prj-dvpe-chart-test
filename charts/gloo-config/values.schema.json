{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "defaults": {
      "type": "object",
      "properties": {
        "callbackPath": {
          "type": "string"
        },
        "cors": {
          "type": "object",
          "properties": {
            "allowCredentials": {
              "type": "boolean"
            },
            "maxAge": {
              "type": "string"
            }
          },
          "required": [ "allowCredentials", "maxAge" ]
        },
        "domains": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "extauth": {
          "type": "object",
          "properties": {
            "redis": {
              "type": "object",
              "properties": {
                "cacheName": {
                  "type": "string"
                }
              },
              "required": [ "cacheName" ]
            },
            "session": {
              "type": "object",
              "properties": {
                "cookieTimeout": {
                  "type": "integer"
                }
              },
              "required": [ "cookieTimeout" ]
            },
            "timeout": {
              "type": "string"
            }
          },
          "required": [ "redis", "session", "timeout" ]
        },
        "issuerUrl": {
          "type": "string"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "glooGateway": {
              "type": "string"
            }
          },
          "required": [ "glooGateway" ]
        },
        "openidConfigurationUrl": {
          "type": "string"
        },
        "passthru": {
          "type": "object",
          "properties": {
            "enableAccessTokenForwarding": {
              "type": "boolean"
            },
            "enableQAccountMatching": {
              "type": "boolean"
            },
            "enableSubjectForwarding": {
              "type": "boolean"
            },
            "grpcAddress": {
              "type": "object",
              "properties": {
                "headerExtension": {
                  "type": "string"
                },
                "strongAuth": {
                  "type": "string"
                },
                "tokenAuth": {
                  "type": "string"
                }
              }
            }
          }
        },
        "realms": {
          "type": "object",
          "properties": {
            "default": {
              "type": "string"
            },
            "m2m": {
              "type": "string"
            }
          },
          "required": [ "default", "m2m" ]
        },
        "redisUrl": {
          "type": "string"
        },
        "service": {
          "type": "object",
          "properties": {
            "port": {
              "type": "integer"
            }
          },
          "required": [ "port" ]
        },
        "sslConfig": {
          "type": "object",
          "properties": {
            "secretRef": {
              "type": "string"
            }
          },
          "required": [ "secretRef" ]
        },
        "upstreamNamespace": {
          "type": "string"
        }
      },
      "required": [
        "domains", "issuerUrl", "metadata", "realms", "openidConfigurationUrl", 
        "redisUrl", "extauth", "callbackPath", "service", 
        "sslConfig", "cors", "upstreamNamespace"
      ]    
    },

    "apigw": {
      "type": "array",
      "items": {
        "svc": {
          "type": "string"
        },
        "type": "object",
        "properties": {
          "internet": {
            "type": "boolean"
          },
          "useMTLS": {
            "type": "boolean"
          },
          "sslSecret": {
            "type": "string"
          },          
          "rootPrefix": {
            "type": "boolean"
          },
          "swaggerPrefix": {
            "type": "boolean"
          },
          "appName": {
            "type": "string"
          },
          "svcName": {
            "type": "string"
          },
          "servicePort": {
            "type": "integer"
          },
          "cors": {
            "type": "object",
            "properties": {
              "allowCredentials": {
                "type": "boolean"
              },
              "allowMethods": {
                "type": "array",
                "items": {
                    "type": "string"
                }
              },
              "allowedHeaders": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "allowedOrigins": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "allowOriginRegex": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "exposeHeaders": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "maxAge": {
                "type": "string"
              }  
            }
          },
          "headerManipulation": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "header": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "strongAuthLevel": {
            "type": "integer"
          },          
          "routes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "prefix": {
                  "$ref": "#/definitions/sanePrefix"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "ui", "ui-with-strongauth", "backend", "backend-with-strongauth", "m2m", "m2m-with-token"
                  ]
                },
                "clientId": {
                  "$ref": "#/definitions/saneClientID"
                },
                "callbackPath": {
                  "$ref": "#/definitions/sanePrefix"
                },
                "clientSecret": {
                  "type": "string"
                },
                "redirectUrl": {
                  "type": "string"
                },
                "headerExtension": {
                  "type": "boolean"
                },
                "allowedClientIds": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "httpsRedirect": {
                  "type": "boolean"
                },
                "sessionCacheName": {
                  "type": "string",
                  "enum":[
                    "auth0-session", "wadtfy-prod", "wadtfy-int", "wadtfy-test"
                  ]
                },
                "upstream": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "namespace": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name"
                  ]
                },
                "authPluginMode": {
                  "type": "string",
                  "enum": [
                    "VerifyAccessToken", "GatherCredentials"
                  ]
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": { "type": { "const": "ui" } },
                    "required": ["type"]
                  },
                  "then": {
                    "required": ["clientId", "clientSecret"]
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "ui-with-strongauth" } },
                    "required": ["type"]
                  },
                  "then": {
                    "required": ["clientId", "clientSecret"]
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "m2m" } },
                    "required": ["type"]
                  },
                  "then": {
                    "required": ["allowedClientIds"]
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "m2m-with-token" } },
                    "required": ["type"]
                  },
                  "then": {
                    "required": ["clientId", "clientSecret"]
                  }
                }
              ],
              "required": [
                "prefix"
              ]
            },
            "uniqueItems": true
          }
        },
        "required": [
          "svc"
        ]
      }
    }
  },
  "required": [
    "apigw", "defaults"
  ],
  "definitions": {
    "sanePrefix": { "type": "string", "pattern": "^[/][A-z]?" },
    "saneClientID": { "type": "string", "pattern": "[-a-z0-9]+"}
  }
}
