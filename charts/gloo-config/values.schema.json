{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "defaults": {
      "type": "object",
      "properties": {
        "cors": {
          "type": "object",
          "properties": {
            "allowCredentials": {
              "type": "boolean"
            },
            "maxAge": {
              "type": "string"
            }
          },
          "required": [ "allowCredentials", "maxAge" ]
        },
        "env": {
          "type": "string",
          "enum": ["dev", "int", "prod"]
        },
        "timeout": {
          "type": "string"
        },
        "authenticationConfig": {
          "type": "object",
          "properties": {
            "redis": {
              "type": "object",
              "properties": {
                "cacheName": {
                  "type": "string",
                  "enum":[
                    "-prod", "wadtfy-int", "wadtfy-test"
                  ]
                }
              },
              "required": [ "cacheName" ]
            },
            "session": {
              "type": "object",
              "properties": {
                "cookieTimeout": {
                  "type": "integer"
                }
              },
              "required": [ "cookieTimeout" ]
            },
            "callbackPath": {
              "$ref": "#/definitions/sanePrefix"
            }
          },
          "required": [ "redis", "session", "callbackPath" ]
        },
        "issuerUrl": {
          "type": "string"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "glooGateway": {
              "type": "string"
            }
          },
          "required": [ "glooGateway" ]
        },
        "openidConfigurationUrl": {
          "type": "string"
        },
        "passthru": {
          "type": "object",
          "properties": {        
            "config": {
              "type": "null"
            },
            "grpcAddress": {
              "type": "object",
              "properties": {
                "headerExtension": {
                  "type": "string"
                },
                "strongAuth": {
                  "type": "string"
                },
                "tokenAuth": {
                  "type": "string"
                }
              },
              "required": [
                "headerExtension", "strongAuth", "tokenAuth"
              ]
            }
          },
          "required": [
            "grpcAddress"
          ]
        },
        "realms": {
          "type": "object",
          "properties": {
            "default": {
              "type": "string"
            },
            "m2m": {
              "type": "string"
            }
          },
          "required": [ "default", "m2m" ]
        },
        "redisUrl": {
          "type": "string"
        },
        "service": {
          "type": "object",
          "properties": {
            "port": {
              "type": "integer"
            }
          },
          "required": [ "port" ]
        },
        "sslConfig": {
          "type": "object",
          "properties": {
            "minTlsVersion": {
              "type": "string",
              "enum": [
                "TLSv1_2", "TLSv1_3"
              ]
            },
            "useCustomIssuer": {
              "type": "boolean"
            },
            "secretRef": {
              "type": "string"
            },
            "secretRefNamespace": {
              "type": "string"
            }
          },
          "required": [ "minTlsVersion" ],
          "allOf": [
            {
              "if": {
                "properties": { "useCustomIssuer": { "const": false } },
                "required": ["useCustomIssuer"]
              },
              "then": {
                "properties": {
                  "certificate": {
                    "type": "object",
                    "properties": {
                      "issuerGroup": {
                        "type": "string"
                      },
                      "organization": {
                        "type": "string"
                      },
                      "country": {
                        "type": "string"
                      },
                      "location": {
                        "type": "string" 
                      },
                      "province": {
                        "type": "string"
                      },
                      "organizationalUnit": {
                        "type": "string"
                      },
                      "emailAddresses": {
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                            "type": "string"
                        }
                      }
                    },
                    "required": [ "issuerGroup", "organization", "country", "location", "province", "organizationalUnit" ]
                  }
                },
                "required": ["certificate"]
              }
            }
          ]
        }
      },
      "required": [ 
        "env", "issuerUrl", "metadata", "realms", "openidConfigurationUrl", 
        "redisUrl", "authenticationConfig", "service", 
        "sslConfig", "cors", "passthru", "timeout"
      ]
    },

    "apigw": {
      "type": "array",
      "items": {
        "svc": {
          "type": "string"
        },
        "type": "object",
        "properties": {
          "internet": {
            "type": "boolean"
          },
          "rootPrefix": {
            "type": "boolean"
          },
          "swaggerPrefix": {
            "type": "boolean"
          },
          "appName": {
            "type": "string"
          },
          "svcName": {
            "type": "string"
          },
          "servicePort": {
            "type": "integer"
          },
          "csrf": {
            "type": "object",
            "properties": {
              "allowSubdomain": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["allowSubdomain"]
          },
          "cors": {
            "type": "object",
            "properties": {
              "allowCredentials": {
                "type": "boolean"
              },
              "allowMethods": {
                "type": "array",
                "items": {
                    "type": "string"
                }
              },
              "allowedHeaders": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "allowedOrigins": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "allowOriginRegex": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "exposeHeaders": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "maxAge": {
                "type": "string"
              }  
            }
          },
          "headerManipulation": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "header": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "strongAuthLevel": {
            "type": "integer"
          },          
          "sslConfig": {
            "type": "object",
            "properties": {
              "minTlsVersion": {
                "type": "string",
                "enum": [
                  "TLSv1_2", "TLSv1_3"
                ]  
              },
              "useCustomIssuer": {
                "type": "boolean"
              },
              "secretRef": {
                "type": "string"
              },
              "secretRefNamespace": {
                "type": "string"
              }
            }
          }, 
          "routes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "prefix": {
                  "$ref": "#/definitions/sanePrefix"
                },
                "authenticationType": {
                  "type": "string",
                  "enum": [
                    "ui", "ui-with-strongauth", "backend", "backend-with-strongauth", "m2m", "m2m-with-token"
                  ]
                },
                "clientSecret": {
                  "type": "string"
                },
                "redirectUrl": {
                  "type": "string"
                },
                "upstream": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "namespace": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name"
                  ]
                },
                "authenticationConfig": {
                  "type": "object",
                  "properties": {
                    "allowedClientIds": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "authPluginMode": {
                      "type": "string",
                      "enum": [
                        "VerifyAccessToken", "GatherCredentials"
                      ]
                    },
                    "callbackPath": {
                      "$ref": "#/definitions/sanePrefix"
                    },    
                    "clientId": {
                      "$ref": "#/definitions/saneClientID"
                    },
                    "headerExtension": {
                      "type": "boolean"
                    },
                    "redis": {
                      "type": "object",
                      "properties": {
                        "cacheName": {
                          "type": "string",
                          "enum":[
                            "wadtfy-prod", "wadtfy-int", "wadtfy-test"
                          ]
                        }
                      }
                    },
                    "session": {
                      "type": "object",
                      "properties": {
                        "cookieTimeout": {
                          "type": "integer"
                        }
                      }
                    }
                  }                  
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": { "authenticationType": { "const": "ui" } },
                    "required": ["authenticationType"]
                  },
                  "then": {
                    "properties": {
                      "authenticationConfig": {
                        "type": "object",
                        "properties": {
                          "clientId": {
                            "$ref": "#/definitions/saneClientID"
                          },
                          "clientSecret": {
                            "type": "string"
                          }
                        },
                        "required": ["clientId", "clientSecret"]
                      }
                    },
                    "required": ["authenticationConfig"]
                  }
                },
                {
                  "if": {
                    "properties": { "authenticationType": { "const": "ui-with-strongauth" } },
                    "required": ["authenticationType"]
                  },
                  "then": {
                    "properties": {
                      "authenticationConfig": {
                        "type": "object",
                        "properties": {
                          "clientId": {
                            "$ref": "#/definitions/saneClientID"
                          },
                          "clientSecret": {
                            "type": "string"
                          }
                        },
                        "required": ["clientId", "clientSecret"]
                      }
                    },
                    "required": ["authenticationConfig"]
                  }
                },
                {
                  "if": {
                    "properties": { "authenticationType": { "const": "m2m" } },
                    "required": ["authenticationType"]
                  },
                  "then": {
                    "properties": {
                      "authenticationConfig": {
                        "type": "object",
                        "properties": {
                          "allowedClientIds": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        },
                        "required": ["allowedClientIds"]
                      }
                    },
                    "required": ["authenticationConfig"]
                  }
                },
                {
                  "if": {
                    "properties": { "authenticationType": { "const": "m2m-with-token" } },
                    "required": ["authenticationType"]
                  },
                  "then": {
                    "properties": {
                      "authenticationConfig": {
                        "type": "object",
                        "properties": {
                          "clientId": {
                            "$ref": "#/definitions/saneClientID"
                          },
                          "clientSecret": {
                            "type": "string"
                          },
                          "authPluginMode": {
                            "type": "string",
                            "enum": [
                              "VerifyAccessToken", "GatherCredentials"
                            ]
                          }
                        },
                        "required": ["clientId", "clientSecret", "authPluginMode"]
                      }
                    },
                    "required": ["authenticationConfig"]
                  }
                }
              ],
              "required": [
                "prefix"
              ]
            },
            "uniqueItems": true
          }
        },
        "required": [
          "svc"
        ]
      }
    }
  },
  "required": [
    "apigw", "defaults"
  ],
  "definitions": {
    "sanePrefix": { "type": "string", "pattern": "^[/][A-z]?" },
    "saneClientID": { "type": "string", "pattern": "[-a-z0-9]+"}
  }
}
